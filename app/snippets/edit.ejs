<div class="grid">
  <div class="col-2-3">
    <input placeholder="title" class="input" id="title" value="<%= snippet.get('title')%>" />
  </div>
  <div class="col-1-3 text-right">
    <button class="btn-blue" id="save">Save</button>
  </div>
  <div class="col-1-1">
    <textarea placeholder="body"rows="30" class="input" id="body"><%= snippet.get('body') %></textarea>
  </div>
  <div class="col-1-1">
    <input placeholder="tags" class="input" id="tags" value="<%= snippet.get('tags').join(' ') %>"/>
  </div>
</div>
