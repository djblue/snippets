<div class="grid">
  <div class="col-2-3">
    <h1><%= snippet.get('title') %></h1>
  </div>
  <div class="col-1-3 text-right">
    <button class="btn-yellow" id="edit">Edit</button>
    <button class="btn-red" id="delete">Delete</button>
  </div>
  <!-- markdown rendered body -->
  <div class="col-1-1 md" id="body"></div>
  <div class="col-1-1">
    <ul class="tags">
    <% snippet.get('tags').forEach(function (tag) { %>
      <li><%= tag %></li>
    <% }) %>
    </ul>
  </div>
</div>

